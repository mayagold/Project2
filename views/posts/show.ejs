<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
              <% include ../partials/head.ejs %>
  </head>
  <body>
    <header>
        <% include ../partials/header.ejs %>
    </header>
    <main>
      <h1> <%=post.title %> </h1>
      <h6>by <%=post.memberId%> </h6>
      <p> <%=post.body %> </p>
      <img src="<%= post.img %>" alt="<%= post.title %> "/>

      <section>
        <a href="/posts/show/<%=post._id%>/edit">Edit Post</a>
      </section>
      <section>
        <form class="form-style" action="/posts/show/<%=post._id%>?_method=DELETE" method="post">
          <input type="submit" name="" value="Delete Post">
        </form>
      </section>
    </main>
  </body>
</html>
