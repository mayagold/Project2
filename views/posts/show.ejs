<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
              <% include ../partials/head.ejs %>
  </head>
  <body class="logged-in">
    <header>
        <% include ../partials/header.ejs %>
    </header>
    <div class="show-post-page">
      <main>
        <h1> <%=post.title %> </h1>
        <h6>by <%=post.memberId%> </h6>
        <img src="<%= post.img %>" alt="<%= post.title %> "/>
        <p> <%=post.body %> </p>
        <a href="#">Likes: </a><%=post.likes%><br/>
        <a href="#">Comment</a>
        <h2>Comments</h2>
        <% if (post.memberId===currentUser) { %>
          <div class="update-post">
            <section>
              <a href="/posts/show/<%=post._id%>/edit">Edit Post</a>
            </section>
            <section>
              <form class="no-style " action="/posts/show/<%=post._id%>?_method=DELETE" method="post">
                <input type="submit" name="" value="Delete Post">
              </form>
            </section>
          </div>
        <% } %>
      </main>
    </div>
    <% include ../partials/footer.ejs %>
  </body>
</html>
