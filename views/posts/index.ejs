<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
          <% include ../partials/head.ejs %>
  </head>
  <body>
    <header>
      <% include ../partials/header.ejs %>
      Logged in as <a href="/members/show/<%=memberId%>"><%= currentUser %></a> || <a href="/members/show/<%=memberId%>/edit">Edit Profile</a>
    </header>
    <main>
      <h2>Top Posts</h2>
      <ul>
          <% for (i=0; i<posts.length; i++) { %>
              <li>
                <a href="/posts/show/<%=posts[i]._id%>"> <%=posts[i].title%> </a> <br/>
                <img src="<%=posts[i].img%>" alt=""><br/>
                <%=posts[i].body%>
              </li>
          <% } %>
      </ul>
    </main>
    <footer>
      Footer
    </footer>
  </body>
</html>
