  <body class=welcome-page>

    <div class="welcome-description">
      <a>A global community dedicated to winter sports. Join us in the white room.</a>
    </div>

    <div class="banner">
      <h1 class="banner-head" id="title">
        <span id="sub">I'd rather be skiing</span>
      </h1>
      <nav class="banner-nav">
        <a href="/sessions/login">Log in</a>
        <a href="/sessions/register">join</a>
      </nav>
