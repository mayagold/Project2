<!-- USER LOGIN DIV: DISPLAYS WHEN USER CLICKS LOG IN -->
    <div class="modal-login">
      <form class="form-style" action="/sessions/login" method="POST">
         <label><input type="text" name="username" value="" placeholder="USERNAME"></label><br/>
         <label>
           <input type="password" name="PASSWORD" value="" placeholder="password"></label><br/>
        <button class="submit">SEND</button>
      </form>
    </div>

<!-- USER LOGIN DIV: DISPLAYS WHEN USER CLICKS REGISTER -->
    <div class="modal-register">
      <form class="form-style" action="/sessions/register" method="POST">
        <label><input type="text" name="username" value="" placeholder="CREATE USERNAME"></label><br/>
        <label><input type="password" name="password" value="" placeholder="CREATE PASSWORD"></label><br/>
        <button class="submit">SEND</button>
      </form>
    </div>

  </body>
